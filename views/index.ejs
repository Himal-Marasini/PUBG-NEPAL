    <meta http-equiv="expires" content="0">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">

    <%- include('./GoogleAnalytic.ejs') %>
    <title>PUBG MOBILE NEPAL</title>
    <link href="Styles/style-homepage.css" rel="stylesheet" type="text/css">
    <link rel="icon" href="/assets/images/Logo.png" type="image/png">
</head>

<body>

    <section class="heroarea">
        <div class="row">
            <div class="heroarea_header--wrapeer">
                <div class="heroarea__logo">
                    <img src="/assets/images/Logo.png" alt="PUBG NEPAL" id=logo>
                </div>
                <div class="store_wrapper">
                    <div class="store_wrapper_icons_text">
                        <a href="/store" target="_self">
                            <img src="/assets/images/icons/carts.svg" id="store_icon">
                            <span style="vertical-align: top;padding-left: 11px;">PUBG MOBILE NEPAL STORE</span>
                        </a>
                    </div>
                </div>
            </div>


            <div class="heroarea__text-background"></div>
            <div class="heroarea__text-container">

                <div class="heroarea__text">
                    <p class="hero__text-title">pubg mobile online matches<br>
                        <span class="hero__text-subtitle">Match Yourself with the High End Players And get to win the
                            exciting cashbacks and Prizes</span>
                    </p>
                </div>
                <div class="heroarea__btn">
                    <a href="#match">
                        <input type="button" value="Register now" class="btn btn--start">
                    </a>
                </div>

            </div>

            <div class="heroarea__icon">
                <a href="#match">
                    <img src="/assets/images/icons/double-arrow.svg" alt="Go down for registering for match"
                        id="goDown">
                </a>
            </div>

        </div>
    </section>

    <section id="match">
        <div class="row">
            <div class="match__upcomingMatchesContainer">
                <% matchInfo.forEach((el)=>{ %>
                <h3 class="match__headingThree">Upcoming Matches : (<%= el.date %>)</h3>
                <div class="match__container">
                    <% el.match.forEach((element)=>{ %>
                    <div class="match">
                        <p class="match__p">Match will start in:</p>
                        <h2 class="match__time"><%= element.time %></h2>

                        <div class="container__matchType">
                            <p class="matchTypeContainer__text">
                                Match Type :<span class="matchTypeContainer__type match--mobile">
                                    (<%= element.type %>) <%= element.device %>
                                </span>
                            </p>
                        </div>

                        <div class="container__matchMap">
                            <p class="matchMapContainer__text">
                                Match Map :<span class="matchMapContainer__type">
                                    <%= element.map %>
                                </span>
                            </p>
                        </div>

                        <div class="match__entryFee">
                            <p class="match__entryFee__text">Entry Fee:<span class="match__entryFee__value"> NRS
                                    150/Per team</span>
                            </p>
                        </div>

                        <div style="margin-top: 20px;">
                            <p class="match__prize__text">Prize:<span>
                                    <ul type="none">
                                        <li class="match__prize__value" style="padding: 20px 0 10px;">First Position:
                                            1200
                                        </li>
                                        <li class="match__prize__value" style="padding: 10px 0;">Second Position: 600
                                        </li>
                                        <li class="match__prize__value" style="padding: 10px 0;">Third Position: 300
                                        </li>
                                        <li class="match__prize__value" style="padding: 10px 0;">Highest kill team: per
                                            kill * 20</li>
                                    </ul>
                                </span></p>
                        </div>
                        <div class="match__registerNow">
                            <a href="/register/<%= element._id %>">
                                <input type="button" value="register now" class="btn_register_result"
                                    id="registerBtn__first">
                            </a>
                        </div>
                    </div>
                    <% }) %>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <section class="match_highlights">
        <div class="row">
            <h3 class="highlights__headingThree">Previous Match Highlights ....</h3>
            <div class="highlights__videoContainer">
                <div class="highlights__firstVideo">
                    <iframe class="video" src="https://www.youtube.com/embed/Q_NNG_7XCjs">
                    </iframe>
                    <figcaption>24-AUG (9:30 PM - MOBILE SQUAD)</figcaption>
                </div>
                <div class="highlights__secondVideo">
                    <iframe class="video" src="https://www.youtube.com/embed/uk4I8b53YNo">
                    </iframe>
                    <figcaption>28-AUG (9:00 PM - MOBILE SQUAD)</figcaption>
                </div>
                <!-- <div class="highlights__thirdVideo">
                    <iframe class="thirdVideo" src="https://www.youtube.com/embed/tgbNymZ7vqY">
                    </iframe>
                    <figcaption>22-MAY-2019(4 PM - Mobo Squad)</figcaption>
                </div> -->
            </div>
            <div class="highlights__icons">
                <div class="highlights__goPreviousicon">
                    <img src="/assets/images/icons/left-arrow.svg" alt="Back" class="leftArrow">
                </div>
                <div class="highlights__goForwardicon">
                    <img src="/assets/images/icons/right-arrow.svg" alt="Forward" class="rightArrow">
                </div>
            </div>
        </div>
    </section>

    <section class="registrationInfo">
        <div class="row">
            <div class="registration__image">
                <img src="/assets/images/Player.png" class="playerImg">
            </div>
            <div class="registrationText">
                <h1 class="registrationText__heading">How to register for games ?</h1>
                <div class="registrationText__firstContainer">
                    <h2 class="registrationText__subHeading">1) Create the Account</h2>
                    <p class="registrationText__para">
                        EveryPlayer is requested to create the Account for taking participate
                        in Matches.If you already have an Account you can Log In from <a href=/login
                            class="registration__logIn">Here</a>
                        or Sign Up for the Account from <a href="/sign-up" class="registration__signUp">Here</a>.
                    </p>
                </div>
                <div class="registrationText__secondContainer">
                    <h2 class="registrationText__subHeading">2) Select the Match</h2>
                    <p class="registrationText__para">
                        After creating the Account, Click on Register on any of the Match you want to play
                        from upcoming match section.
                    </p>
                </div>
                <div class="registrationText__thirdContainer">
                    <h2 class="registrationText__subHeading">3) fill up the form</h2>
                    <p class="registrationText__para">
                        At last, Fill up the form according to your requirement then Hurry<br>
                        <span class="registrationText__yellow">You are Ready for the Match !!! </span>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <footer>
        <div class="row">
            <div class="links">
                <div class="links__connectionLink">
                    <h2 class="links__heading">Connect with Us:</h2>
                    <nav>
                        <li><a href="https://www.facebook.com/Pubg-Nepal-Page-102500497817937/" target="_blank"
                                class="fb">Facebook</a>
                        </li>
                        <li><a href="https://www.youtube.com/channel/UCjka13oB7AUQ35DMKVp0kxA" target="_blank"
                                class="fb">Youtube</a>
                        </li>
                        <li><a href="https://www.instagram.com/pubgmobilefornepal/" target="_blank"
                                class="fb">Instagram</a></li>
                        <li><a href="https://discord.gg/X9pKxQh" target="_blank" class="fb">Discord</a></li>
                    </nav>
                </div>
            </div>
            <hr>
            <p class="copyright">Copyright&copy;PubgNepal.All Rights Reserved</p>
        </div>
    </footer>
    <script src="/assets/js/homepage/dom.js"></script>
</body>

</html>